{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./*"],
            "@/*": ["./*"]
        },
        "types": ["@nuxt/types", "@nuxtjs/axios", "@types/node"]
    },
    // Suppress import error by VSCode
    "include": [
        "components/**/*.ts",
        "components/**/*.vue",
        "layouts/**/*.ts",
        "layouts/**/*.vue",
        "pages/**/*.ts",
        "pages/**/*.vue",
        "store/**/*.ts",
        "utils/**/*.ts"
    ],
    "exclude": ["node_modules", ".nuxt", "dist"]
}
